<section class="get">
    <h3>Get Data</h3>
    <a href="/get-data">LOAD DATA</a>
    <div>
        {{# each items }}
        <article class="item">
            {{!-- <div>Title: {{ this.title }}</div>
            <div>Content: {{ this.content }}</div>
            <div>Author: {{ this.author }}</div> --}}
            <div>Name: {{ this.name }}</div>
            <div>Age: {{ this.age }}</div>
            <div>Role: {{ this.role }}</div>
            <div>PPSN: {{ this.ppsn }}</div>
            <div>Wage: {{ this.wage }}</div>
            <div>ID: {{ this._id }}</div>
        </article>
        {{/each}}
    </div>
</section>
